{
  "compilerOptions": {
    "target": "es2016",                             /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */
    "module": "commonjs",                           /* Specify what module code is generated. */
    "esModuleInterop": true,                        /* Enable compatibility for importing CommonJS modules. */
    "forceConsistentCasingInFileNames": true,       /* Ensure consistent casing in file names. */
    "strict": true,                                 /* Enable strict type-checking options for better safety. */
    "skipLibCheck": true,                           /* Skip type checking of declaration files for better performance. */
    "jsx": "react-jsx",                             /* This tells TypeScript to handle JSX with React. */
    "moduleResolution": "node",                     /* Ensure proper module resolution from node_modules. */
    "allowJs": false,                               /* Disable JavaScript files in the TypeScript project. */
    "noEmit": false,                                /* Allow TypeScript to emit JavaScript files (necessary for React). */
    "isolatedModules": true                         /* Ensure that each file can be transpiled independently without relying on other files. */
  },
  "include": [
    "src"                                           /* Include all files in the src folder for type checking. */
  ],
  "exclude": [
    "node_modules"                                  /* Exclude the node_modules folder from type checking. */
  ]
}
